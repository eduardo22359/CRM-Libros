@{ ViewData["Title"] = "Ventas > Editar"; }

@model Venta




<!--***********************************************************************-->


<!-- Crea una Plantilla para un formulario-->
<div id="editclientes">
    <div class="card" id="cardeditcli">
        <div class="card-header">
            <h3>Actualizar Venta</h3>
        </div>
        <div class="container">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Id" class="card-title">ID</label>
                    <label for="Id" class="form-label">@Model.Id</label>
                    <input type="hidden" class="form-control" id="Id" asp-for="Id" required>
                </div>
                <div class="mb-3">
                    <label for="ClienteId" class="form-label">Cliente</label>
                    <select asp-for="ClienteId" class="form-select" aria-label="Default select example" required>
                        @foreach (var c in (List<Cliente>)ViewBag.Cliente)        
                        {
                            <option value="@c.Id">@c.Nombre  (@c.Telefono)</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="ProductoId" class="form-label">Producto</label>
                    <select asp-for="ProductoId" class="form-select" aria-label="Default select example" required>
                        @foreach (var d in (List<Producto>)ViewBag.Producto)        
                        {
                            <option value="@d.Id">@d.Descripcion  ($@d.Precio)</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="Fecha" class="form-label">Fecha</label>
                    <input type="text" class="form-control" id="Fecha" asp-for="Fecha" required>
                </div>
                <div class="row d-flex justify-content-between">
                    <div class="col d-flex justify-content-center">
                        <button class="btn btn-success btn-block">Actualizar</button>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger btn-block" asp-action="Index">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

